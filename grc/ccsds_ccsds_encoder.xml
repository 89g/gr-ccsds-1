<?xml version="1.0"?>
<block>
  <name>CCSDS Encoder</name>
  <key>ccsds_ccsds_encoder</key>
  <category>ccsds</category>
  <import>import ccsds</import>
  <make>ccsds.ccsds_encoder($type.size, $len_tag_key, $rs_encode, $interleave, $scramble, $idle, $idle_block_time, $asm_tail, $printing, $verbose)</make>
  <callback>set_idle($idle)</callback>
	<callback>set_idle_block_time($idle_block_time)</callback>
  <param>
      <name>Input type</name>
      <key>type</key>
      <type>enum</type>
      <hide>part</hide>
      <option>
          <name>PDU Message</name>
          <key>message</key>
          <opt>size:0</opt>
      </option>
      <option>
          <name>Tagged byte stream</name>
          <key>byte</key>
          <opt>size:gr.sizeof_char</opt>
      </option>
  </param>
  <param>
    <name>Length tag key</name>
    <key>len_tag_key</key>
    <value>"packet_len"</value>
    <type>string</type>
  </param>
  <param>
    <name>RS Encode</name>
    <key>rs_encode</key>
    <value>True</value>
    <type>enum</type>
    <option>
        <name>Yes</name>
        <key>True</key>
    </option>
    <option>
        <name>No</name>
        <key>False</key>
    </option>
  </param>
  <param>
    <name>Interleave</name>
    <key>interleave</key>
    <value>True</value>
    <type>enum</type>
    <option>
        <name>Yes</name>
        <key>True</key>
    </option>
    <option>
        <name>No</name>
        <key>False</key>
    </option>
  </param>
  <param>
    <name>Scramble</name>
    <key>scramble</key>
    <value>True</value>
    <type>enum</type>
    <option>
        <name>Yes</name>
        <key>True</key>
    </option>
    <option>
        <name>No</name>
        <key>False</key>
    </option>
  </param>
  <param>
    <name>Idle Frames</name>
    <key>idle</key>
    <value>True</value>
    <type>bool</type>
  </param>
  <param>
    <name>Idle Block Time (ms)</name>
    <key>idle_block_time</key>
    <value>50</value>
    <type>float</type>
  </param>
  <param>
    <name>Add ASM to Tail</name>
    <key>asm_tail</key>
    <value>False</value>
    <type>enum</type>
    <hide>part</hide>
    <option>
        <name>Yes</name>
        <key>True</key>
    </option>
    <option>
        <name>No</name>
        <key>False</key>
    </option>
  </param>
  <param>
    <name>Print packets</name>
    <key>printing</key>
    <value>False</value>
    <type>enum</type>
    <hide>part</hide>
    <option>
        <name>Yes</name>
        <key>True</key>
    </option>
    <option>
        <name>No</name>
        <key>False</key>
    </option>
  </param>
  <param>
    <name>Verbose</name>
    <key>verbose</key>
    <value>False</value>
    <type>enum</type>
    <hide>part</hide>
    <option>
        <name>Yes</name>
        <key>True</key>
    </option>
    <option>
        <name>No</name>
        <key>False</key>
    </option>
  </param>
  <sink>
    <name>in</name>
    <type>$type</type>
  </sink>
  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
