<?xml version="1.0"?>
<block>
  <name>CCSDS Encoder</name>
  <key>ccsds_ccsds_encoder</key>
  <category>ccsds</category>
  <import>import ccsds</import>
  <make>ccsds.ccsds_encoder($len_tag_key, $rs_encode, $interleave, $scramble, $printing, $verbose)</make>
  <param>
    <name>Length tag key</name>
    <key>len_tag_key</key>
    <value>"packet_len"</value>
    <type>string</type>
  </param>
  <param>
    <name>RS Encode</name>
    <key>rs_encode</key>
    <value>True</value>
    <type>enum</type>
    <option>
        <name>Yes</name>
        <key>True</key>
    </option>
    <option>
        <name>No</name>
        <key>False</key>
    </option>
  </param>
  <param>
    <name>Interleave</name>
    <key>interleave</key>
    <value>True</value>
    <type>enum</type>
    <option>
        <name>Yes</name>
        <key>True</key>
    </option>
    <option>
        <name>No</name>
        <key>False</key>
    </option>
  </param>
  <param>
    <name>Scramble</name>
    <key>scramble</key>
    <value>True</value>
    <type>enum</type>
    <option>
        <name>Yes</name>
        <key>True</key>
    </option>
    <option>
        <name>No</name>
        <key>False</key>
    </option>
  </param>
  <param>
    <name>Print packets</name>
    <key>printing</key>
    <value>False</value>
    <type>enum</type>
    <option>
        <name>Yes</name>
        <key>True</key>
    </option>
    <option>
        <name>No</name>
        <key>False</key>
    </option>
  </param>
  <param>
    <name>Verbose</name>
    <key>verbose</key>
    <value>False</value>
    <type>enum</type>
    <option>
        <name>Yes</name>
        <key>True</key>
    </option>
    <option>
        <name>No</name>
        <key>False</key>
    </option>
  </param>
  <sink>
    <name>in</name>
    <type>message</type>
  </sink>
  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
